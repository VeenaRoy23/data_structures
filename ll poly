void product()
{
	struct pol *new;
	struct pol *pptr;
	struct pol *qptr;
	struct pol *rptr;
	struct pol *ptr;
	struct pol *ptr1;
	int c,x;
	pptr=pheader->link;
	qptr=qheader->link;
	rptr=rheader;
	while(pptr!=NULL)
	{
		while(qptr!=NULL)
		{
			c=pptr->coeff*qptr->coeff;
			x=pptr->exp+qptr->exp;
			new=(struct pol*)malloc(sizeof(struct pol));
			new->coeff=c;
			new->exp=x;
			new->link=NULL;
			rptr->link=new;
			rptr=rptr->link;
			qptr=qptr->link;
		}
		pptr=pptr->link;
	}
/*	ptr=rheader->link;
